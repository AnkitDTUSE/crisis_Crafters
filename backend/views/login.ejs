<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DisasterManagement</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      body::-webkit-scrollbar {
        display: none;
      }
    </style>
  </head>
  <body>
    <div class="bg-zinc-800 min-h-screen flex flex-col p-8 w-full">
       <a
        href="/"
        class="flex justify-between items-center bg-zinc-600 rounded-lg text-white p-4 w-[50px]"
      >
        <i class="ri-arrow-left-line"></i
      ></a>
      <%if(error && error.length > 0 ){%> <%error.forEach((error)=>{%>

      <div
        class="absoulte top-0 left-1/2 w-[400px] h-[40px] bg-red-500 rounded-lg text-black text-xl p-5 flex justify-center items-center"
      >
        <p><%=error%></p>
      </div>

      <%})%> <%}%> <%if(success && success.length > 0 ){%>
      <%success.forEach((success)=>{%>

      <div
        class="absoulte top-0 left-1/2 w-[400px] h-[40px] bg-red-500 rounded-lg text-black text-xl p-5 flex justify-center items-center"
      >
        <p><%=success%></p>
      </div>

      <%})%> <%}%>
      <h1 class="text-4xl text-white">crisisCrafters login test-1</h1>
      <div class="w-full flex flex-col justify-center items-center mt-10">
        <a
          href="/login/admin"
          class="bg-yellow-500 rounded-md p-4 text-black m-4"
          >if admin click here</a
        >
        <form
          action="/login"
          method="post"
          class="flex flex-col w-1/3 justify-center items-center border-2 border-zinc-700 rounded-md p-7"
        >
          <input
            type="text"
            class="m-2 outline-none rounded-lg text-white border border-zinc-500 text-small bg-transparent py-3 px-5 w-full"
            name="name"
            placeholder="Enter your name"
          />
          <input
            type="text"
            class="m-2 outline-none rounded-lg text-white border border-zinc-500 text-small bg-transparent py-3 px-5 w-full"
            name="roll"
            placeholder="Enter roll no. 24/se/030"`
          />
          <input
            type="password"
            class="m-2 outline-none rounded-lg text-white border border-zinc-500 text-small bg-transparent py-3 px-5 w-full"
            name="password"
            placeholder="Enter your Password"
          />
          <input
            type="submit"
            value="Leme enter"
            class="bg-blue-500 mt-3 w-1/3 p-3 rounded-lg"
          />
        </form>
      </div>
    </div>
  </body>
</html>
